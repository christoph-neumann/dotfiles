#!/bin/bash

branch="$1"
if [ "$1" == "" ]; then
	ref=$(git symbolic-ref HEAD 2> /dev/null)
	branch="origin/"${ref#refs/heads/}
fi

git_log="git log --oneline --color=always"

git fetch
out=$($git_log HEAD --not "$branch")
if [ "$out" != "" ]; then
	echo "+++ Revisions on this branch that are not in $branch:"
	echo "$out"
fi

out=$($git_log "$branch" --not HEAD)
if [ "$out" != "" ]; then
	echo "--- Revisions in $branch that are not in this branch:"
	echo "$out"
fi
